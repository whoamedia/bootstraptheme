 <form id="enchant_form">

                      {% assign fname = customer.first_name %}
                      {% assign lname = customer.last_name %}
                      <input type="hidden" id="enchant_subject" name="enchant_subject" value="Modeling Form" />
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4" class="col-form-label">First Name</label>
      	<input type="text" id="enchant_fname" name="enchant_fname" class="req form-control" value="{{ fname }}" placeholder="Enter first name" />
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4" class="col-form-label">Last Name</label>
     <input type="text" id="enchant_lname" name="enchant_lname" class="req form-control" value="{{ lname }}" placeholder="Enter last name" />
    </div>
  </div>
   <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4" class="col-form-label">Email Address</label>
      	<input type="email" id="enchant_email" name="enchant_email" class="req form-control" value="{{ customer.email }}" placeholder="Enter valid email" />
      	<span id="error-email-message" style="display:none;">Invalid email address</span>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4" class="col-form-label">Phone</label>
        	<input type="tel" id="enchant_phone" name="enchant_phone" class="req form-control" value="{{ customer.phone }}" placeholder="Enter phone number" />
    </div>
  </div>
 
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity" class="col-form-label">City</label>
      	<input type="text" id="enchant_city" name="enchant_city" class="req form-control" value="{{ customer.city }}" placeholder="Enter city" />
    </div>
    <div class="form-group col-md-4">
      <label for="inputState" class="col-form-label">State</label>
      	<select class="req form-control" id="enchant_state" name="enchant_state">
                              	<option value="">Select a state</option>
                            	{% for s in states %}
                              	<option value="{{ s }}">{{ s }}</option>
                              	{% endfor %}
                          	</select>
    </div>
    <div class="form-group col-md-2">
      <label for="inputZip" class="col-form-label">Zip</label>
     	<input type="text" id="enchant_zip" name="enchant_zip" class="req form-control" value="{{ customer.zip }}" placeholder="Enter zip code" />
    </div>
  </div>
    <div class="form-row">
   
    <div class="form-group col-md-4">
      <label for="inputState" class="col-form-label ">Social Network</label>
      	<select class="req form-control" id="enchant_social_network" name="enchant_social_network">
                              	<option value="">Select a social network</option>
                            	{% for s in social_media_set %}
                              	<option value="{{ s }}">{{ s }}</option>
                              	{% endfor %}
                          	</select>
    </div>
    <div class="form-group col-md-8">
      <label for="inputZip" class="col-form-label">@</label>
     	
								<input type="tel" id="enchant_social" name="enchant_social" class="form-control req" value="{{ customer.social }}" placeholder="Enter social media ID" />
    </div>
  </div>
  <div class="form-group">
    <label>Front Photo</label>
