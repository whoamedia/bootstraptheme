<div class="row justify-content-center register">





<div class="col-12 col-md-4">
<header class="page-header mt-5">
  Reset Password
</header>
<p class="help-block">Enter a new password for {{email}}.</p>



<!-- Reset Password Form -->
<div class="row justify-content-center mt-5 mb-5">
  <div class="col-12">
    {% form 'reset_customer_password' %}

      <!-- Display any reset errors. -->
      {% if form.errors %}
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title">Error resetting password.</h3>
        </div>
        <div class="panel-body">
          <p>There was a problem resetting your password.</p>
          <p>Please check that you typed your new password correctly both times.</p>
        </div>      
      </div>
      {% endif %}

      <div class="form-group">
        <label for="customer[password]">New Password</label>
        <input type="password" class="form-control" id="customer[password]" name="customer[password]" value="" />
      </div>

      <div class="form-group">
        <label for="customer[password_confirmation]">Confirm New Password</label>
        <input type="password" class="form-control" id="customer[password_confirmation]" name="customer[password_confirmation]" />
      </div>

      <div class="form-group">
        <button type="submit" class="button button-3d button-rounded button-red">Reset Password</button>
      </div>

      <hr />
      <p class="text-center">
        {{ 'Return to Login' | customer_login_link }}
      </p>
    {% endform %}

</div>
</div>





</div>
</div>