<div class="row collection">
    <div class="col">
        {% if collection.description != '' %}
            {% if collection.image %}
            <div class="row align-items-center gutter-10">
                <div class="col-12 col-md-4">
                    <img alt="{{ collection.title }}" class="img-fluid" src="{{ collection.image | image_url: width: 300, height: 300, crop: 'center' }}" title="{{ collection.title }}" width="300" height="300" loading="lazy"/>
                </div>
                <div class="col-12 col-md-8 mt-2">
                    <div class="coll-back rounded">
                        {{- collection.description | split: '<!-- split -->' | last -}}
                        <div class="addthis_inline_share_toolbox_hd22 mt-2 d-none d-sm-block"></div>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-12">
                <div class="cat-banner">
                    <h1 class="coll-title-header">{{ collection.title }}</h1>
                    <div>{{ collection.description | split: '<!-- split -->' | last }}</div>
                </div>
            </div>
            {% endif %}
        {% endif %}
    </div>
</div>
<hr/>
