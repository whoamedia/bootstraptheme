        {%- render 'submenu' -%}</div>
    <div class="col-12 col-md-9">
        <div class="gutter-10 row">
            {%- for link in linklists.mens-underwear.links -%}
                <div class="col-6 col-md-4 mb-3 cats">
                    <div class="card">
                        <a href="{{ routes.collections_url }}/{{ link.object.handle }}">
                            <img alt="{{ link.object.title }}" class="card-img-top" src="{{ link.object.image | image_url: width: 400, height: 400, crop: 'center' }}" width="400" height="400" loading="lazy"/></a>
                        <div class="card-body text-center">
                            <p class="card-text">
                                <a href="{{ routes.collections_url }}/{{ link.object.handle }}" title="{{ link.title }}">{{ link.title }}</a>
                            </p>
                        </div>
                    </div>
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>
