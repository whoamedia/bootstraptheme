<div class="row ">
  <div class="col ">
    {% if collection.description != '' %}
      {% if collection.image %}
      <div class="row align-items-center gutter-10">
        <div class="col-12 col-md-5">
          <img src="{{ collection.image | image_url: width: 600, height: 600, crop: 'center' }}" class="img-fluid" alt="{{ collection.image }}" title="{{ collection.image }}" width="600" height="600" loading="lazy">
        </div>
        <div class="col-12 col-md-7">
          <div class="coll-back rounded">
            <div class="">{{ collection.description | split: '<!-- split -->' | last }}</div>
          </div>
        </div>
      </div>
      {% else %}
      <div class="col-12">
        <div class="cat-banner">
          <header class="coll-title-header">{{ collection.title }}</header>
          <div>{{ collection.description | split: '<!-- split -->' | last }}</div>
        </div>
      </div>
      {% endif %}
    {% endif %}
  </div>
</div>
