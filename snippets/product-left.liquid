  {% assign total = 0 %}
  {% for variant in product.variants %}
  {% unless variant.inventory_management == '' %}        
  {% capture temp %}{{ total | plus: variant.inventory_quantity }}{% endcapture %}
  {% assign total = temp %}
  {% endunless %}        
  {% endfor %}
  {% assign fulltotal = total | plus:0 %} 
  {% unless fulltotal > 200 %}
    
