<style>

.responsive-image__wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
    margin: 0 auto;
}

.responsive-image__wrapper::before {
    content: "";
    position: relative;
    display: block;
}

.responsive-image__wrapper img {
    display: block;
    width: 100%;
}

.responsive-image__wrapper--full-height {
    height: 100%;
}

.responsive-image__image {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
}

.responsive-image__image:focus {
    outline-offset: -4px;
}

.product-card img {
    width: 100%;
}

.product-card .title {
    height: 34px;
    line-height: 1.5rem;
    font-weight: var(--medium);
    font-family: var(--headerfont);

}

.product-card .product-col-price {
    color: var(--black);
    border-top: 1px solid var(--greyline);
    padding-top: 10px;

    font-weight: var(--regular);
    text-align: center;

}

.product-card .price-color {
    color: var(--red);
    font-weight: var(--medium);
    margin-top: 5px;
}


.product-col-price span:not(:last-child):after {
    border-right: 1px solid var(--greyline);
    content: ".";
    padding-left: 10px !important;
    color: var(--white);
}

.product-col-price span:not(:last-child) {
    margin-right: 15px;
}

.product-col-price .comparetext {
    text-decoration: line-through;
}

.product-card .freebie-status-tag {
    position: absolute;
    top: 50%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    left: 0;
    z-index: 5;
    right: 0;
    color: var(--white);
    min-height: 100%;
    background: rgba(0, 0, 0, .5);
    text-align: center;
    padding-top: 60%;
}

.product-card .freebie-status-tag span {
    display: block;
    line-height: 1;
    font-size: 1.4rem;
    background: #d3232b;
    padding: 10px;
}

.product-card .card-body {
    padding: 1rem;
}

.product-card .status-tag {
    position: absolute;
    top: 50%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    left: 0;
    z-index: 5;
    right: 0;
    color: var(--white);
    min-height: 100%;
    background: rgba(0, 0, 0, .5);
    text-align: center;
    padding-top: 80%;
    text-transform: uppercase;
}

.product-card .status-tag span {
    display: block;
    line-height: 1;
    font-size: 16px;
    background: rgba(0, 0, 0, .8);
    padding: 10px;
}

.product-card .status-tag img {
    animation: shakeY;
    /* referring directly to the animation's @keyframe declaration */
    animation-duration: 10s;
    /* don't forget to set a duration! */
}

.product-card .review {
    top: 10%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    left: 0;
    z-index: 5;
    right: 0;
    font-size: 1.2rem;
    color: #222;
    min-height: 18px;
    /* min-height: 100%; */
    text-align: center;
    /* padding-top: 80%; */
    text-transform: uppercase;
}
</style>
<div class="card rounded mb-3 product-card">
    <a href="{{ product.url }}" title="{{ product.title }}">
        {% render 'responsive-image',
          image: product.featured_image.src,
          image_class: "image",
          wrapper_class: "image-wrapper",
          max_width: 1200,
          max_height: 1800 %}
    </a>
    {%- assign sold_out = true -%}
    {%- if product.available -%}
    {%- assign sold_out = false -%}
    {%- endif -%}
    {%- assign total = 0 -%}
    {%- for variant in product.variants -%}
    {% unless variant.inventory_management == '' -%}
    {% capture temp -%}
    {{ total | plus: variant.inventory_quantity }}
    {% endcapture -%}
    {% assign total = temp -%}
    {% endunless -%}
    {%- endfor -%}
    {%- assign fulltotal = total | plus : 0 -%}
    {%- if fulltotal <= 0 -%} <div class="status-tag rounded">
        <span>
            You Missed This Deal!
            <br>Sold Out
        </span>
</div>
{%- endif -%}
{% if collection.handle == 'freebies' or product.price == 0.00 -%}
{% if cart.total_price < 2500 %} <div class="freebie-status-tag rounded">
    {% if cart.total_price == 0 %}
    <span>
        <strong>Spend $25
        </strong><br />To Unlock This Freebie</span>
    {% elsif cart.total_price < 2500 %} <span>
        <strong>Add
            <strong>{{ 2500 | minus: cart.total_price | money }}</strong>
            More to Cart
        </strong><br />To Unlock This Freebie</span>
        {% endif %}
        </div>
        {% endif %}
        {% endif %}
        <div class="row align-items-center">
            <div class="col-12">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 d-table mb-2">
                            <span class="title d-table-cell align-middle">
                                <a href="{{ product.url }}" title="{{ product.title }}" class="stretched-link">
                                    {{ product.title | truncate: 60 }}</a>
                            </span>
                        </div>
                        <div class="col-12 mb-0 mt-2">
                            <div class="review">
                                <span>
                                    <div class="loox-rating" data-id="{{ product.id }}" data-raters="{{ product.metafields.loox.num_reviews }}" data-rating="{{ product.metafields.loox.avg_rating }}"></div>
                                </span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="product-col-price">
                                <span class="price-color">
                                    {%- if product.price == 0.00 -%}
                                    FREE
                                    {%- else -%}
                                    {{ product.price | money | remove: '.00' }}
                                    {%- endif -%}
                                    {% if product.compare_at_price > product.price %}{% endif %}
                                </span>
                                {%- if product.compare_at_price_max > product.price -%}
                                <span class="d-none d-md-inline-block was-color">
                                    <del>{{ product.compare_at_price_max | money | remove: '.00' }}</del>
                                </span>
                                <span class="save-color">
                                    {{ product.compare_at_price_max | minus:product.price | times:100 | divided_by:product.compare_at_price_max }}% OFF
                                </span>
                                {%- endif -%}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>