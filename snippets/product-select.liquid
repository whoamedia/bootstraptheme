<div class="row">
    <div class="col-12 mt-4">
        <div class="row">
            <div class="col-6 sizelabel text-start text-uppercase align-middle">
                Select Size:
            </div>
            <div class="col-6 sizelabel text-end text-uppercase align-middle">
                {%- include 'product-size-guide' -%}
            </div>
        </div>
        <div class="options text-center mt-5">
            {%- assign total = 0 %}
            {%- for variant in product.variants -%}
            {%- unless variant.inventory_management == '' -%}
            {%- capture temp -%}{{ total | plus: variant.inventory_quantity }}
            {%- endcapture -%}
            {%- assign total = temp -%}
            {%- endunless -%}
            {%- endfor -%}
            {%- assign fulltotal = total | plus:0 -%}
            {% form 'product', product, id: "oldID", class: "old-class", data-cart-submit: "data-cart-submit" %}
            <ul class="variant_selector variant-size mt-2 mb-1 h-100 px-0">
                {% for variant in product.variants %}
                {% assign single = variant.title | downcase %}
                <li class="mb-3">
                    <input id="{{variant.id}}" type="radio" data-id="{{ variant.id }}" name="id" value="{{ variant.id }}" {% if variant.inventory_quantity <=0 %} disabled="disabled" {% endif %} />
                    <label class="comman_class {% if variant.inventory_quantity <= 0 %}soldout{% endif %}" for="{{ variant.id }}">
                         <div class="labelname text-uppercase">{{ variant.title | downcase }}
                                                    <div class="labelqty">
                                                        {% if variant.inventory_quantity >= 30 %}
                                                            In Stock
                                                            {% elsif variant.inventory_quantity <= 0 %}Sold Out
                                                        {% else %}
                                                            {{ variant.inventory_quantity }}
                                                            Left{% endif %}
                                                    </div>
                                                    {% assign qty = variant.inventory_quantity %}
                                                    {% if qty <= 25 %}
                                                        {% assign status = 'bg-danger infinite flash' %}
                                                        {% elsif qty <= 40 %}
                                                        {% assign status = 'bg-warning infinite flash slower' %}
                                                        {% elsif qty <= 100 %}
                                                        {% assign status = 'bg-success' %}
                                                    {% else %}
                                                        {% assign status = 'bg-success' %}
                                                    {% endif %}
                                                    <div class="progress" style="height: 7px;">
                                                        <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="25" class="progress-bar {{ status }} progress-bar-striped progress-bar-animated" role="progressbar" style="width: {{ qty }}%;"></div>
                                                    </div>



                                                </div>
                     <!--    <div class="labelname text-uppercase">{{ variant.title | downcase }}
                        </div> -->
                    </label>
                </li>
                {% endfor %}
            </ul>
