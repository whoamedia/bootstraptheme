{% if article.metafields.article.galleryimages %}
    <div class="row justify-content-center">
        <div class="col-12  text-uppercase">
            <div class="fancy-title mt-5 mb-5 title-center">
                <h2 class="">Gallery</h2>
            </div>
        </div>
        {% assign extraImages = article.metafields.article.galleryimages | split : "," %}
        {% for imageURL in extraImages %}
            <div class="col-12 col-md-4 pt-2 pb-2">
                <a class="" data-gallery="example-gallery-11" data-bs-toggle="lightbox" href="{{ imageURL }}">
                    <img class="img-fluid" src="{{ imageURL }}"/>
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}