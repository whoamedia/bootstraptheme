<div class="dealbox border mb-4">
    <a href="/collections/{{ collection.handle }}" title="{{ collection.title }}">
        <img alt="{{ collection.image.alt | escape }}" class="img-fluid lazyload" data-src="{{ collection.image | img_url: '600x400' }}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
    </a>
    <div class="row h-100 bg-light info">
        <div class="{% if featured == true %} col-12  {% else %} col-8  {% endif %} my-auto">
            <h1>
                <a href="/collections/{{ collection.handle }}" title="{{ collection.title }}">{{ collection.title }}</a>
            </h1>
            <h2>{{ collection.description | split: '<!-- split -->' | first }}</h2>
        </div>
        <div class="col-4 text-right my-auto">
            <div class="countdown">
                <div class="title">Time Left:</div>
                <div class="time">
                    {% if soldout %}
                        <span>Sold Out!</span>
                    {% else %}
                        {%- include 'simpletime' -%}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>