}

.dealbox h2 {
    margin-bottom: 0;
    margin-top: 0;
    display: block;
    color: var(--dark);
    font-weight: var(--regular);
    font-family: var(--bodyfont);
    font-size: 1.4rem;
}

.dealbox .countdown {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    display: block;
}

