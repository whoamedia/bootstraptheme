<header class="page-header">
  <h1>404 Not Found</h1>
</header>

<!--  Message letting people know we couldn't find the page. -->
<div class="row">
  <div class="col-md-12">
    <p class="lead">
      The page you're looking for does not exist.
    </p>

    <p class="lead">
      Try searching for what you're looking for, or return to our <a href="{{ shop.url }}">home page</a>.
    </p>
  </div>
</div>

<!-- Search box. -->
<div class="row">
  <div class="col-md-4">      
      <div class="input-group">
        <input type="search" name="q" value="{{ search.terms }}" placeholder="Enter a search term..." class="form-control" />
        <button class="btn btn-outline-secondary" type="submit">
          Search
        </button>
      </div>
  </div>
</div>

{% schema %}
{
  "name": "Main 404",
  "settings": []
}
{% endschema %}

